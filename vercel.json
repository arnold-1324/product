{
    "version": 2,
    "builds": [
      { "src": "backend/server.js", "use": "@vercel/node" },
      { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "frontend/dist" } }
    ],
    "routes": [
      { "src": "/send-email", "dest": "/api/server" },
      { "src": "/(.*)", "dest": "/frontend/dist/$1" }
    ],
    "env": {
    "MAILTRAP_API_KEY": "@mailtrap_api_key",
    "MAILTRAP_API_URL": "@mailtrap_api_url",
    "MAILTRAP_TO_EMAIL": "@mailtrap_to_email",
    "MAILTRAP_FROM_EMAIL": "@mailtrap_from_email",
    "MAILTRAP_FROM_NAME": "@mailtrap_from_name"
  }
  }